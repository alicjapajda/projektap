{% extends 'base.html.twig' %}
{% block title %}
    {{ 'title_event_list'|trans }}
{% endblock %}
{% block body %}
    <h1>{{ 'title_event_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 't.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_date'|trans, 't.date') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_title'|trans, 't.title') }}</th>
                <th>{{ 'label_cate'|trans }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.date |format_date('long') }}</td>
                    <td>{{ event.title }}</td>
                    <td>{{ event.cate.title }}</td>
                    <td>
                        <a href="{{ url('event_edit', {id: event.id}) }}" title="{{ 'event_edit'|trans }}">
                            {{ 'action_edit'|trans }}
                        </a>
                        <a href="{{ url('event_delete', {id: event.id}) }}" title="{{ 'event_delete'|trans }}">
                            {{ 'action_delete'|trans }}
                        </a>


                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <div>   <a href="{{ url('event_create')}}" >
                {{ 'event_create'|trans }}
            </a></div>




        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
